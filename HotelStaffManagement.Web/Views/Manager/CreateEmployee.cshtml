@model HotelStaffManagement.Web.Models.Manager.CreateEmployeeViewModel

@{
    ViewData["Title"] = "Ավելացնել Աշխատակից";
}

@section Styles {
    <link rel="stylesheet" href="~/css/manager.css" />
}

<div class="create-employee-form">
    <h2>Ավելացնել Աշխատակից</h2>
    <form asp-action="CreateEmployee" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group mb-3">
            <label asp-for="FullName" class="form-label"></label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="PhoneNumber" class="control-label"></label>
            <input asp-for="PhoneNumber" class="form-control"
                   pattern="^0([1-9][0-9])\d{6}$"
                   placeholder="0XXXXXXXX"
                   title="Մուտքագրեք ճիշտ հայկական հեռախոսահամար՝ օրինակ՝ 094123456" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Username" class="form-label"></label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Position" class="form-label"></label>
            <select asp-for="Position" class="form-select" asp-items="Model.Positions">
                <option value="@Model.Position">Ընտրել հաստիք</option>
            </select>
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="SalaryPerHour"></label>
            <input asp-for="SalaryPerHour" class="form-control" type="number" value="" />
            <span asp-validation-for="SalaryPerHour" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success">Ստեղծել</button>
            <a asp-action="Index" class="btn btn-secondary">Չեղարկել</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
