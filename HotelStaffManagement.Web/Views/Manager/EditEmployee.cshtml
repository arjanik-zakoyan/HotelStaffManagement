@model HotelStaffManagement.Web.Models.Manager.EditEmployeeViewModel
@{
    ViewData["Title"] = "Փոփոխել Տվյալները";
}

@section Styles {
    <link rel="stylesheet" href="~/css/manager.css" />
}

<div class="container mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-edit text-white">
                    <h5 class="mb-0">Փոփոխել Աշխատակցի Տվյալները</h5>
                </div>
                <div class="card-body">
                    <form asp-action="EditEmployee" method="post">
                        <input asp-for="UserID" type="hidden" />

                        <div class="form-group mb-3">
                            <label asp-for="FullName" class="form-label"></label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                            <input asp-for="PhoneNumber" class="form-control"
                                   pattern="^0([1-9][0-9])\d{6}$"
                                   placeholder="0XXXXXXXX"
                                   title="Մուտքագրեք ճիշտ հայկական հեռախոսահամար՝ օրինակ՝ 094123456" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Position" class="form-label"></label>
                            <select asp-for="Position" asp-items="Model.Positions" class="form-select"></select>
                            <span asp-validation-for="Position" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label asp-for="SalaryPerHour" class="form-label"></label>
                            <input asp-for="SalaryPerHour" class="form-control" />
                            <span asp-validation-for="SalaryPerHour" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-edit">Պահպանել</button>
                            <a asp-action="EmployeeDetails" asp-route-id="@Model.UserID" class="btn btn-secondary">Չեղարկել</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
